{
    "compilerOptions": {
        "module": "system",
        "outFile": "build/main.js",
        "noImplicitAny": true,
        "removeComments": true,
        "target": "es5",
        "noEmitOnError": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ]
}
